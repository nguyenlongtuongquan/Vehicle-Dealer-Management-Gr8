@model string

@{
    var status = Model ?? "UNKNOWN";
    var badgeClass = "badge-default";
    var displayText = status;

    // Map status to badge class and display text
    switch (status.ToUpper())
    {
        case "ACTIVE":
        case "AVAILABLE":
        case "PAID":
        case "DELIVERED":
        case "DONE":
        case "APPROVED":
        case "CONFIRMED":
        case "RESOLVED":
        case "SIGNED":
        case "ORDER_CREATED":
            badgeClass = "badge-success";
            displayText = status switch
            {
                "ACTIVE" => "Hoạt động",
                "AVAILABLE" => "Có sẵn",
                "PAID" => "Đã thanh toán",
                "DELIVERED" => "Đã giao",
                "DONE" => "Hoàn thành",
                "APPROVED" => "Đã duyệt",
                "CONFIRMED" => "Đã xác nhận",
                "RESOLVED" => "Đã giải quyết",
                "SIGNED" => "Đã ký",
                "ORDER_CREATED" => "Đã tạo đơn",
                _ => status
            };
            break;

        case "PENDING":
        case "DRAFT":
        case "OPEN":
        case "REQUESTED":
        case "IN_PROGRESS":
        case "PARTIALLY_PAID":
        case "PENDING_SIGNATURE":
            badgeClass = "badge-warning";
            displayText = status switch
            {
                "PENDING" => "Chờ xử lý",
                "DRAFT" => "Nháp",
                "OPEN" => "Mở",
                "REQUESTED" => "Yêu cầu",
                "IN_PROGRESS" => "Đang xử lý",
                "PARTIALLY_PAID" => "Trả một phần",
                "PENDING_SIGNATURE" => "Chờ chữ ký",
                _ => status
            };
            break;

        case "CANCELLED":
        case "REJECTED":
        case "EXPIRED":
        case "INACTIVE":
        case "SUSPENDED":
        case "DISCONTINUED":
            badgeClass = "badge-error";
            displayText = status switch
            {
                "CANCELLED" => "Đã hủy",
                "REJECTED" => "Từ chối",
                "EXPIRED" => "Hết hạn",
                "INACTIVE" => "Tạm ngưng",
                "SUSPENDED" => "Đình chỉ",
                "DISCONTINUED" => "Ngừng sản xuất",
                _ => status
            };
            break;

        case "SENT":
        case "SUBMITTED":
        case "ACCEPTED":
            badgeClass = "badge-info";
            displayText = status switch
            {
                "SENT" => "Đã gửi",
                "SUBMITTED" => "Đã nộp",
                "ACCEPTED" => "Đã chấp nhận",
                _ => status
            };
            break;

        default:
            displayText = status;
            break;
    }
}

<span class="badge @badgeClass">@displayText</span>

