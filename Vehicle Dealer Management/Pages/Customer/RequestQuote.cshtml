@page "/Customer/RequestQuote"
@model Vehicle_Dealer_Management.Pages.Customer.RequestQuoteModel
@{
    ViewData["Title"] = "Yêu cầu báo giá";
    ViewData["UserRole"] = "CUSTOMER";
    ViewData["UserName"] = HttpContext.Session.GetString("UserName") ?? "Customer";
}

<div class="content-header">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="content-title">Yêu cầu báo giá</h1>
            <p class="content-subtitle">Điền thông tin để nhận báo giá từ đại lý</p>
        </div>
        <a href="/Customer/Vehicles" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-error">
        <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i> @Model.SuccessMessage
    </div>
}

@if (Model.Vehicle != null)
{
    <div class="grid grid-cols-2 gap-4">
        <!-- Left: Vehicle Info -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin xe</h3>
            </div>
            <div class="card-body">
                <img src="@Model.Vehicle.ImageUrl" alt="@Model.Vehicle.ModelName" 
                     style="width: 100%; height: auto; border-radius: var(--radius-sm); margin-bottom: 1rem;" />
                <h4>@Model.Vehicle.ModelName @Model.Vehicle.VariantName</h4>
                <div style="padding: 1rem; background: var(--surface); border: 1px solid var(--border); border-radius: var(--radius-sm); margin-top: 1rem;">
                    <div class="text-muted" style="font-size: 0.875rem;">Giá tham khảo</div>
                    <div style="color: var(--accent-cyan); font-size: 1.5rem; font-weight: 700;">
                        @Model.Vehicle.Price.ToString("N0") VND
                    </div>
                </div>
            </div>
        </div>

        <!-- Right: Request Form -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin yêu cầu</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />

                    <div class="form-group">
                        <label for="dealerId">Chọn đại lý *</label>
                        <select class="form-control" id="dealerId" name="dealerId" required>
                            <option value="">-- Chọn đại lý --</option>
                            @foreach (var dealer in Model.Dealers)
                            {
                                <option value="@dealer.Id">@dealer.Name - @dealer.Address</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="color">Màu sắc</label>
                        <select class="form-control" id="color" name="color">
                            <option value="STANDARD">Tiêu chuẩn</option>
                            <option value="BLACK">Đen</option>
                            <option value="WHITE">Trắng</option>
                            <option value="SILVER">Bạc</option>
                            <option value="BLUE">Xanh dương</option>
                            <option value="RED">Đỏ</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="quantity">Số lượng *</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" 
                               value="1" min="1" max="10" required />
                    </div>

                    <div class="form-group">
                        <label for="note">Ghi chú (tùy chọn)</label>
                        <textarea class="form-control" id="note" name="note" rows="3" 
                                  placeholder="Ví dụ: Màu sắc ưa thích, thời gian nhận xe..."></textarea>
                    </div>

                    <div style="display: flex; gap: 0.75rem; margin-top: 1.5rem;">
                        <a href="/Customer/Vehicles" class="btn btn-secondary" style="flex: 1;">
                            Hủy
                        </a>
                        <button type="submit" class="btn btn-primary" style="flex: 1;">
                            <i class="bi bi-file-text"></i> Gửi yêu cầu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-error">
        <i class="bi bi-exclamation-circle"></i> Không tìm thấy thông tin xe.
    </div>
}

