<!-- Reply Modals -->
@foreach (var feedback in Model.Feedbacks)
{
    <div id="replyModal@(feedback.Id)" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Tr·∫£ l·ªùi ph·∫£n h·ªìi</h3>
