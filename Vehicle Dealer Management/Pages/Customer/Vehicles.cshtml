@page
@model Vehicle_Dealer_Management.Pages.Customer.VehiclesModel
@{
    ViewData["Title"] = "Danh mục xe điện";
    ViewData["UserRole"] = "CUSTOMER";
    ViewData["UserName"] = HttpContext.Session.GetString("UserName") ?? "Customer";
}

<div class="content-header">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="content-title">Khám phá xe điện</h1>
            <p class="content-subtitle">Chọn mẫu xe phù hợp với bạn</p>
        </div>
        <a href="/Customer/Compare" class="btn btn-primary">
            <i class="bi bi-diagram-3"></i> So sánh xe
        </a>
    </div>
</div>

<div class="grid grid-cols-3">
    @foreach (var vehicle in Model.Vehicles)
    {
        <div class="card">
            <img src="@vehicle.ImageUrl" alt="@vehicle.Name" style="width: 100%; height: 200px; object-fit: cover; border-radius: var(--radius) var(--radius) 0 0; margin: -1.5rem -1.5rem 1rem -1.5rem;" />
            <div class="card-body" style="padding-top: 0;">
                <h4 style="margin-bottom: 0.5rem;">@vehicle.Name @vehicle.Variant</h4>
                <p class="text-muted mb-3" style="font-size: 0.875rem;">@vehicle.Description</p>
                
                <div style="background: var(--surface); border: 1px solid var(--border); padding: 1rem; border-radius: var(--radius-sm); margin-bottom: 1rem;">
                    <div class="text-muted mb-1" style="font-size: 0.875rem;">Giá từ</div>
                    <div style="color: var(--accent-cyan); font-size: 1.5rem; font-weight: 700;">
                        @vehicle.Price.ToString("N0") VND
                    </div>
                </div>

                <div class="grid grid-cols-3 gap-2">
                    <a href="/Customer/VehicleDetail?id=@vehicle.Id" class="btn btn-secondary btn-sm">
                        <i class="bi bi-eye"></i> Chi tiết
                    </a>
                    <a href="/Customer/Compare?ids=@vehicle.Id" class="btn btn-outline btn-sm" style="border-color: var(--accent-cyan); color: var(--accent-cyan);">
                        <i class="bi bi-diagram-3"></i> So sánh
                    </a>
                    <a href="/Customer/RequestQuote?vehicleId=@vehicle.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-file-text"></i> Báo giá
                    </a>
                </div>
            </div>
        </div>
    }
</div>

