@page
@model Vehicle_Dealer_Management.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="content-header">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="content-title">Quản lý người dùng</h1>
            <p class="content-subtitle">Danh sách và phân quyền người dùng</p>
        </div>
        <button class="btn btn-primary" onclick="openCreateModal()">
            <i class="bi bi-person-plus"></i> Thêm người dùng
        </button>
    </div>
</div>

<!-- Stats -->
<div class="grid grid-cols-3 md:grid-cols-6 mb-4">
    <div class="stat-card">
        <div class="stat-label">Tổng người dùng</div>
        <div class="stat-value">@Model.TotalUsers</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Customers</div>
        <div class="stat-value" style="color: var(--info);">@Model.CustomerCount</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Dealer Staff</div>
        <div class="stat-value" style="color: var(--accent-cyan);">@Model.DealerStaffCount</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Dealer Manager</div>
        <div class="stat-value" style="color: var(--accent-cyan);">@Model.DealerManagerCount</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">EVM Staff</div>
        <div class="stat-value" style="color: var(--success);">@Model.EvmStaffCount</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Admins</div>
        <div class="stat-value" style="color: var(--warning);">@Model.AdminCount</div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <div class="grid grid-cols-4 gap-2">
            <input type="text" class="form-control" placeholder="Tìm theo tên, email..." />
            <select class="form-control" id="filterRole">
                <option value="">Tất cả vai trò</option>
                @foreach (var role in Model.AllRoles)
                {
                    <option value="@role.Code">@role.Name</option>
                }
            </select>
            <select class="form-control" id="filterDealer">
                <option value="">Tất cả đại lý</option>
                @foreach (var dealer in Model.AllDealers)
                {
                    <option value="@dealer.Id">@dealer.Name</option>
                }
            </select>
            <button class="btn btn-primary">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-body">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Số ĐT</th>
                        <th>Vai trò</th>
                        <th>Đại lý</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td><strong>#@user.Id</strong></td>
                            <td>
                                <strong>@user.FullName</strong>
                            </td>
                            <td class="text-muted">@user.Email</td>
                            <td>@user.Phone</td>
                            <td>
                                <span class="badge @(user.RoleCode == "EVM_ADMIN" ? "badge-warning" : 
                                                    user.RoleCode == "EVM_STAFF" ? "badge-success" : 
                                                    user.RoleCode.StartsWith("DEALER") ? "badge-info" : "badge-default")">
                                    @user.RoleName
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.DealerName))
                                {
                                    <span>@user.DealerName</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge badge-success">Active</span>
                            </td>
                            <td>
                                <div class="flex gap-1">
                                    <button class="btn btn-secondary btn-sm" onclick="openEditModal(@user.Id)" data-user-id="@user.Id">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </button>
                                    @if (user.Id != int.Parse(HttpContext.Session.GetString("UserId") ?? "0"))
                                    {
                                        <button class="btn btn-danger btn-sm" onclick="confirmDelete(@user.Id, '@user.FullName')">
                                            <i class="bi bi-trash"></i> Xóa
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="margin-bottom: 1rem;">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="margin-bottom: 1rem;">
        <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
    </div>
}

<!-- Create User Modal -->
<div id="createModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.3); z-index: 2000; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 600px; width: 90%; max-height: 90vh; overflow-y: auto;">
        <div class="card-header">
            <h3 class="card-title mb-0">Thêm người dùng mới</h3>
            <button class="btn btn-sm" onclick="closeCreateModal()" style="margin-left: auto;">&times;</button>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="CreateUser" id="createUserForm">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="form-label">Họ tên <span style="color: red;">*</span></label>
                    <input type="text" class="form-control" name="fullName" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Email <span style="color: red;">*</span></label>
                    <input type="email" class="form-control" name="email" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control" name="phone" />
                </div>
                <div class="form-group">
                    <label class="form-label">Vai trò <span style="color: red;">*</span></label>
                    <select class="form-control" name="roleId" id="createRoleId" required onchange="toggleDealerSelection('create')">
                        <option value="">-- Chọn vai trò --</option>
                        @foreach (var role in Model.AllRoles)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group" id="createDealerGroup" style="display: none;">
                    <label class="form-label">Đại lý <span style="color: red;">*</span></label>
                    <select class="form-control" name="dealerId" id="createDealerId">
                        <option value="">-- Chọn đại lý --</option>
                        @foreach (var dealer in Model.AllDealers)
                        {
                            <option value="@dealer.Id">@dealer.Name (@dealer.Code)</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <small class="form-text">Mật khẩu mặc định: <strong>123456</strong></small>
                </div>
                <div class="flex gap-2" style="margin-top: 1.5rem;">
                    <button type="submit" class="btn btn-primary">Tạo người dùng</button>
                    <button type="button" class="btn btn-secondary" onclick="closeCreateModal()">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div id="editModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.3); z-index: 2000; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 600px; width: 90%; max-height: 90vh; overflow-y: auto;">
        <div class="card-header">
            <h3 class="card-title mb-0">Chỉnh sửa người dùng</h3>
            <button class="btn btn-sm" onclick="closeEditModal()" style="margin-left: auto;">&times;</button>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="UpdateUser" id="editUserForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" id="editUserId" />
                <div class="form-group">
                    <label class="form-label">Họ tên <span style="color: red;">*</span></label>
                    <input type="text" class="form-control" name="fullName" id="editFullName" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Email <span style="color: red;">*</span></label>
                    <input type="email" class="form-control" name="email" id="editEmail" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control" name="phone" id="editPhone" />
                </div>
                <div class="form-group">
                    <label class="form-label">Vai trò <span style="color: red;">*</span></label>
                    <select class="form-control" name="roleId" id="editRoleId" required onchange="toggleDealerSelection('edit')">
                        <option value="">-- Chọn vai trò --</option>
                        @foreach (var role in Model.AllRoles)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group" id="editDealerGroup" style="display: none;">
                    <label class="form-label">Đại lý <span style="color: red;">*</span></label>
                    <select class="form-control" name="dealerId" id="editDealerId">
                        <option value="">-- Chọn đại lý --</option>
                        @foreach (var dealer in Model.AllDealers)
                        {
                            <option value="@dealer.Id">@dealer.Name (@dealer.Code)</option>
                        }
                    </select>
                </div>
                <div class="flex gap-2" style="margin-top: 1.5rem;">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                    <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Form (hidden) -->
<form method="post" asp-page-handler="DeleteUser" id="deleteForm" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="userId" id="deleteUserId" />
</form>

<script>
    function openCreateModal() {
        document.getElementById('createModal').style.display = 'flex';
        document.getElementById('createUserForm').reset();
        document.getElementById('createDealerGroup').style.display = 'none';
    }

    function closeCreateModal() {
        document.getElementById('createModal').style.display = 'none';
    }

    function openEditModal(userId) {
        fetch(`/Admin/Users?handler=UserData&userId=${userId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const user = data.user;
                    document.getElementById('editUserId').value = user.id;
                    document.getElementById('editFullName').value = user.fullName;
                    document.getElementById('editEmail').value = user.email;
                    document.getElementById('editPhone').value = user.phone || '';
                    document.getElementById('editRoleId').value = user.roleId;
                    document.getElementById('editDealerId').value = user.dealerId || '';

                    toggleDealerSelection('edit');
                    document.getElementById('editModal').style.display = 'flex';
                } else {
                    alert('Không thể tải dữ liệu người dùng: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Đã xảy ra lỗi khi tải dữ liệu.');
            });
    }

    function closeEditModal() {
        document.getElementById('editModal').style.display = 'none';
    }

    function toggleDealerSelection(mode) {
        const roleSelect = document.getElementById(mode + 'RoleId');
        const dealerGroup = document.getElementById(mode + 'DealerGroup');
        const dealerSelect = document.getElementById(mode + 'DealerId');
        const selectedOption = roleSelect.options[roleSelect.selectedIndex];
        
        if (selectedOption) {
            const roleName = selectedOption.text;
            if (roleName && (roleName.includes('Nhân viên đại lý') || roleName.includes('Quản lý đại lý'))) {
                dealerGroup.style.display = 'block';
                if (dealerSelect) dealerSelect.required = true;
            } else {
                dealerGroup.style.display = 'none';
                if (dealerSelect) {
                    dealerSelect.required = false;
                    dealerSelect.value = '';
                }
            }
        }
    }

    function confirmDelete(userId, userName) {
        if (confirm(`Bạn có chắc chắn muốn xóa người dùng "${userName}"?`)) {
            document.getElementById('deleteUserId').value = userId;
            document.getElementById('deleteForm').submit();
        }
    }

    // Close modals when clicking outside
    document.getElementById('createModal')?.addEventListener('click', function(e) {
        if (e.target === this) closeCreateModal();
    });

    document.getElementById('editModal')?.addEventListener('click', function(e) {
        if (e.target === this) closeEditModal();
    });
</script>

