        @if (Model.Feedbacks.Any())
        {
            @foreach (var feedback in Model.Feedbacks)
            {
                var isComplaint = feedback.Type == "COMPLAINT";
                
                <div class="card mb-3" style="border: 1px solid @(isComplaint ? "var(--error)" : "var(--border)");">
                    <div class="card-body">
                        <div class="flex justify-between items-start mb-2">
