<script>
    function openEditModal(button) {
        var testDriveId = button.getAttribute('data-testdrive-id');
        var dealerId = button.getAttribute('data-dealer-id');
        var vehicleId = button.getAttribute('data-vehicle-id');
        var date = button.getAttribute('data-date');
        var time = button.getAttribute('data-time');
        var note = button.getAttribute('data-note') || '';

        document.getElementById('editTestDriveId').value = testDriveId;
        document.getElementById('editDealerId').value = dealerId;
        document.getElementById('editVehicleId').value = vehicleId;
        document.getElementById('editDate').value = date;
        document.getElementById('editTime').value = time;
        document.getElementById('editNote').value = note;

        document.getElementById('editModal').style.display = 'flex';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        var bookModal = document.getElementById('bookModal');
        var editModal = document.getElementById('editModal');
        if (event.target == bookModal) {
            bookModal.style.display = 'none';
        }
        if (event.target == editModal) {
            editModal.style.display = 'none';
        }
    }

    // Auto-open modal if there's an error
    @if (TempData["KeepModalOpen"] != null)
    {
        <text>
        window.onload = function() {
            document.getElementById('bookModal').style.display = 'flex';
        };
        </text>
    }
</script>

