@page "/Home"
@model Vehicle_Dealer_Management.Pages.Auth.HomeModel
@{
    Layout = "_LayoutPublic";
    ViewData["Title"] = "Home - EVM Dealer Portal";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #F8F9FA 0%, var(--bg) 100%);
        padding: 6rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        border-bottom: 1px solid var(--border);
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="1" fill="rgba(25,135,84,0.08)"/></svg>') repeat;
        opacity: 0.5;
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        color: var(--text-heading);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }
    
    .hero-subtitle {
        font-size: 1.5rem;
        color: var(--text-muted);
        margin-bottom: 3rem;
        line-height: 1.6;
    }
    
    .hero-cta {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .cta-primary {
        padding: 1rem 3rem;
        font-size: 1.125rem;
        background: var(--accent-cyan);
        color: white;
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .cta-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(25, 135, 84, 0.3);
    }
    
    .cta-secondary {
        padding: 1rem 3rem;
        font-size: 1.125rem;
        background: var(--surface);
        color: var(--text);
        border: 1px solid var(--border);
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-weight: 600;
        transition: background 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .cta-secondary:hover {
        background: #E9ECEF;
    }
    
    .stats-section {
        background: var(--surface);
        border-top: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
        padding: 3rem 2rem;
    }
    
    .stats-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        text-align: center;
    }
    
    .stat-item {
        padding: 1rem;
    }
    
    .stat-number {
        font-size: 3rem;
        font-weight: 700;
        color: var(--accent-cyan);
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        font-size: 1rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    
    .features-section {
        padding: 6rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .section-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-heading);
        margin-bottom: 1rem;
    }
    
    .section-subtitle {
        text-align: center;
        font-size: 1.125rem;
        color: var(--text-muted);
        margin-bottom: 4rem;
    }
    
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }
    
    .feature-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 2rem;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        border-color: var(--accent-cyan);
    }
    
    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        display: inline-block;
    }
    
    .feature-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-heading);
        margin-bottom: 1rem;
    }
    
    .feature-description {
        color: var(--text-muted);
        line-height: 1.6;
    }
    
    .cta-section {
        background: linear-gradient(135deg, var(--accent-cyan) 0%, #157347 100%);
        padding: 6rem 2rem;
        text-align: center;
    }
    
    .cta-section-content {
        max-width: 600px;
        margin: 0 auto;
    }
    
    .cta-section .section-title {
        color: white;
    }
    
    .cta-section .section-subtitle {
        color: rgba(255, 255, 255, 0.9);
    }
    
    .story-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }
    
    @@media (max-width: 968px) {
        .story-section {
            grid-template-columns: 1fr !important;
        }
    }
    
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2rem;
        }
        
        .hero-subtitle {
            font-size: 1.125rem;
        }
        
        .hero-cta {
            flex-direction: column;
        }
        
        .cta-primary, .cta-secondary {
            width: 100%;
            justify-content: center;
        }
        
        .grid.grid-cols-5 {
            grid-template-columns: repeat(2, 1fr) !important;
        }
        
        .story-section {
            gap: 2rem;
        }
    }
    
    @@media (max-width: 480px) {
        .grid.grid-cols-5 {
            grid-template-columns: 1fr !important;
        }
    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">
            <i class="bi bi-lightning-charge" style="color: var(--accent-cyan);"></i>
            Hệ thống quản lý đại lý xe điện
        </h1>
        <p class="hero-subtitle">
            Nền tảng toàn diện cho đại lý, hãng xe và khách hàng. 
            Quản lý bán hàng, tồn kho và dịch vụ chuyên nghiệp.
        </p>
        <div class="hero-cta">
            <a href="/Login" class="cta-primary">
                <i class="bi bi-box-arrow-in-right"></i>
                Đăng nhập
            </a>
            <a href="/Register" class="cta-secondary">
                <i class="bi bi-person-plus"></i>
                Đăng ký ngay
            </a>
        </div>
    </div>
</section>

<!-- Story & Mission Section -->
<section style="background: var(--bg); padding: 6rem 2rem; position: relative; overflow: hidden;">
    <div style="max-width: 1200px; margin: 0 auto;">
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center;">
            <!-- Left: Story Text -->
            <div>
                <h2 style="font-size: 2.5rem; font-weight: 700; color: var(--text-heading); margin-bottom: 1.5rem;">
                    Câu chuyện của chúng tôi
                </h2>
                <div style="color: var(--text-muted); line-height: 1.8; font-size: 1.125rem; margin-bottom: 2rem;">
                    <p style="margin-bottom: 1.5rem;">
                        Từ một tầm nhìn về tương lai xanh, chúng tôi đã xây dựng nên hệ thống quản lý đại lý xe điện hàng đầu Việt Nam. 
                        Với sứ mệnh mang đến giải pháp công nghệ toàn diện, chúng tôi kết nối nhà sản xuất, đại lý và khách hàng 
                        trong một hệ sinh thái bền vững.
                    </p>
                    <p style="margin-bottom: 1.5rem;">
                        Mỗi chiếc xe điện không chỉ là phương tiện, mà còn là bước tiến của chúng ta hướng tới một tương lai 
                        không carbon. Chúng tôi tin rằng công nghệ và sự tiện lợi có thể song hành cùng trách nhiệm với môi trường.
                    </p>
                </div>
                
                <div style="background: var(--surface); border: 1px solid var(--border); border-left: 4px solid var(--accent-cyan); padding: 2rem; border-radius: var(--radius-sm);">
                    <h3 style="font-size: 1.5rem; font-weight: 600; color: var(--text-heading); margin-bottom: 1rem;">
                        <i class="bi bi-bullseye" style="color: var(--accent-cyan); margin-right: 0.5rem;"></i>
                        Sứ mệnh của chúng tôi
                    </h3>
                    <p style="color: var(--text-muted); line-height: 1.8;">
                        Đơn giản hóa quy trình quản lý, tối ưu hiệu quả kinh doanh và đem đến trải nghiệm tốt nhất cho mọi khách hàng. 
                        Chúng tôi cam kết hỗ trợ các đối tác đại lý phát triển bền vững trong thời đại xe điện.
                    </p>
                </div>
            </div>
            
            <!-- Right: Vehicle Image -->
            <div style="position: relative;">
                <div style="background: linear-gradient(135deg, #F8F9FA 0%, var(--surface) 100%); border: 1px solid var(--border); border-radius: var(--radius); padding: 2rem; box-shadow: 0 20px 60px rgba(0,0,0,0.1);">
                    <img src="https://icar.vn/wp-content/uploads/2024/01/top-5-xe-o-to-dien-co-muc-gia-tot-nhat-2023-800x417.jpg" 
                         alt="Xe điện cao cấp" 
                         style="width: 100%; height: auto; max-height: 400px; border-radius: var(--radius-sm); object-fit: contain; box-shadow: 0 10px 40px rgba(25, 135, 84, 0.15);" />
                </div>
                <!-- Decorative elements -->
                <div style="position: absolute; top: -20px; right: -20px; width: 100px; height: 100px; background: var(--accent-cyan); opacity: 0.08; border-radius: 50%; z-index: -1;"></div>
                <div style="position: absolute; bottom: -30px; left: -30px; width: 150px; height: 150px; background: var(--accent-cyan); opacity: 0.05; border-radius: 50%; z-index: -1;"></div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="stats-container">
        <div class="stat-item">
            <div class="stat-number">@Model.TotalVehicles+</div>
            <div class="stat-label">Mẫu xe điện</div>
        </div>
        <div class="stat-item">
            <div class="stat-number">@Model.TotalDealers+</div>
            <div class="stat-label">Đại lý</div>
        </div>
        <div class="stat-item">
            <div class="stat-number">@Model.TotalCustomers+</div>
            <div class="stat-label">Khách hàng</div>
        </div>
        <div class="stat-item">
            <div class="stat-number">100%</div>
            <div class="stat-label">Thân thiện môi trường</div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <h2 class="section-title">Tính năng nổi bật</h2>
    <p class="section-subtitle">Giải pháp toàn diện cho mọi nhu cầu quản lý</p>
    
    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon" style="color: var(--accent-cyan);">
                <i class="bi bi-shop"></i>
            </div>
            <h3 class="feature-title">Quản lý đại lý</h3>
            <p class="feature-description">
                Hệ thống quản lý bán hàng, tồn kho, khách hàng và báo cáo doanh số chuyên nghiệp cho đại lý.
            </p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon" style="color: var(--success);">
                <i class="bi bi-car-front"></i>
            </div>
            <h3 class="feature-title">Danh mục xe điện</h3>
            <p class="feature-description">
                Quản lý thông tin xe, giá bán, chính sách khuyến mãi và tồn kho theo thời gian thực.
            </p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon" style="color: var(--warning);">
                <i class="bi bi-file-text"></i>
            </div>
            <h3 class="feature-title">Quản lý bán hàng</h3>
            <p class="feature-description">
                Tạo báo giá, đơn hàng, hợp đồng. Theo dõi thanh toán và lịch giao xe dễ dàng.
            </p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon" style="color: var(--info);">
                <i class="bi bi-people"></i>
            </div>
            <h3 class="feature-title">Quản lý khách hàng</h3>
            <p class="feature-description">
                Lưu trữ thông tin khách hàng, lịch lái thử và xử lý phản hồi một cách hiệu quả.
            </p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon" style="color: var(--accent-cyan);">
                <i class="bi bi-bar-chart"></i>
            </div>
            <h3 class="feature-title">Báo cáo & Phân tích</h3>
            <p class="feature-description">
                Dashboard trực quan với báo cáo doanh số, tồn kho và hiệu suất bán hàng chi tiết.
            </p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon" style="color: var(--success);">
                <i class="bi bi-shield-check"></i>
            </div>
            <h3 class="feature-title">An toàn & Bảo mật</h3>
            <p class="feature-description">
                Phân quyền theo vai trò, bảo mật dữ liệu và tuân thủ các tiêu chuẩn bảo mật.
            </p>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="cta-section-content">
        <h2 class="section-title" style="margin-bottom: 1.5rem;">Sẵn sàng bắt đầu?</h2>
        <p class="section-subtitle" style="margin-bottom: 2rem;">
            Đăng ký ngay hôm nay để trải nghiệm hệ thống quản lý đại lý xe điện hiện đại nhất.
        </p>
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="/Register" class="cta-primary" style="background: white; color: var(--accent-cyan);">
                <i class="bi bi-person-plus"></i>
                Đăng ký miễn phí
            </a>
            <a href="/Login" class="cta-secondary" style="background: rgba(255, 255, 255, 0.2); color: white; border-color: white;">
                <i class="bi bi-box-arrow-in-right"></i>
                Đăng nhập
            </a>
        </div>
    </div>
</section>

<!-- Footer -->
<footer style="background: var(--surface); padding: 3rem 2rem; border-top: 1px solid var(--border);">
    <div style="max-width: 1200px; margin: 0 auto; text-align: center;">
        <div style="margin-bottom: 2rem;">
            <div style="font-size: 1.5rem; font-weight: 700; color: var(--text-heading); margin-bottom: 1rem;">
                <i class="bi bi-lightning-charge" style="color: var(--accent-cyan);"></i>
                EVM Dealer Portal
            </div>
            <p class="text-muted">Hệ thống quản lý đại lý xe điện chuyên nghiệp</p>
        </div>
        
        <div style="display: flex; justify-content: center; gap: 2rem; margin-bottom: 2rem; flex-wrap: wrap;">
            <a href="/Home" style="color: var(--text-muted); text-decoration: none;">Trang chủ</a>
            <a href="/Customer/Vehicles" style="color: var(--text-muted); text-decoration: none;">Xe điện</a>
            <a href="/Login" style="color: var(--text-muted); text-decoration: none;">Đăng nhập</a>
            <a href="/Register" style="color: var(--text-muted); text-decoration: none;">Đăng ký</a>
        </div>
        
        <div style="border-top: 1px solid var(--border); padding-top: 2rem; color: var(--text-muted); font-size: 0.875rem;">
            <p>&copy; 2025 EVM Dealer Portal. All rights reserved.</p>
        </div>
    </div>
</footer>

