    <script>
        function openPaymentModalWithRemainingAmount() {
            var remainingAmount = @Model.Order.RemainingAmount.ToString(System.Globalization.CultureInfo.InvariantCulture);
            document.getElementById('paymentAmount').value = remainingAmount;
            document.getElementById('paymentModal').style.display = 'flex';
        }
        
        // Auto-fill remaining amount when modal opens (for both button clicks)
        var paymentModal = document.getElementById('paymentModal');
        if (paymentModal) {
            // When clicking the "Add Payment" button
            document.querySelector('button[onclick*="paymentModal"]')?.addEventListener('click', function() {
                setTimeout(function() {
                    var remainingAmount = @Model.Order.RemainingAmount.ToString(System.Globalization.CultureInfo.InvariantCulture);
                    var amountInput = document.getElementById('paymentAmount');
                    if (amountInput && (!amountInput.value || amountInput.value == '0')) {
                        amountInput.value = remainingAmount;
                    }
                }, 100);
            });
        }
    </script>
}

