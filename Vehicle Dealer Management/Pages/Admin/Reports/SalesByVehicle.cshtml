@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Vehicle Revenue Bar Chart
        @if (Model.VehicleReports.Any())
        {
            <text>
            const vehicleRevenueCtx = document.getElementById('vehicleRevenueChart');
            const vehicleData = @Html.Raw(Json.Serialize(Model.VehicleReports.Select(v => new { 
                label = v.ModelName + " " + v.VariantName,
                revenue = v.Revenue,
                quantity = v.QuantitySold
            })));
            
            new Chart(vehicleRevenueCtx, {
                type: 'bar',
                data: {
                    labels: vehicleData.map(v => v.label),
                    datasets: [{
                        label: 'Doanh thu (VND)',
                        data: vehicleData.map(v => v.revenue),
                        backgroundColor: 'rgba(25, 135, 84, 0.8)',  /* Changed to green */
                        borderColor: 'rgba(25, 135, 84, 1)',        /* Changed to green */
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(255, 255, 255, 0.95)',
                            titleColor: '#212529',
                            bodyColor: '#212529',
                            borderColor: '#DEE2E6',
                            borderWidth: 1,
                            callbacks: {
                                label: function(context) {
                                    const value = context.parsed.y;
                                    const dataIndex = context.dataIndex;
                                    const quantity = vehicleData[dataIndex].quantity;
                                    return 'Doanh thu: ' + value.toLocaleString('vi-VN') + ' VND (S·ªë l∆∞·ª£ng: ' + quantity + ' xe)';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('vi-VN') + ' VND';
                                },
                                color: '#6C757D'  /* Changed to gray for light theme */
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'  /* Light gray grid lines */
                            }
                        },
                        x: {
                            ticks: {
                                color: '#6C757D',  /* Changed to gray for light theme */
                                maxRotation: 45,
                                minRotation: 45
                            },
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
            </text>
        }
        else
        {
            <text>
            const chartContainer = document.getElementById('vehicleRevenueChart');
            if (chartContainer) {
                chartContainer.parentElement.innerHTML = 
                    '<div class="chart-placeholder"><i class="bi bi-bar-chart-fill" style="font-size: 4rem; opacity: 0.3; color: #6C757D;"></i><p style="color: #6C757D;">Ch∆∞a c√≥ d·ªØ li·ªáu</p></div>';
            }
            </text>
        }
    </script>
}

